{
  "extends": ["stylelint-config-standard-scss"],
  "rules": {
    "block-no-empty": true,
    "comment-no-empty": true,
    "no-empty-source": true
  },
  "to_be_added_rules": {
    "at-rule-empty-line-before": [
      "always",
      {
        "except": ["blockless-after-same-name-blockless", "first-nested"],
        "ignore": ["after-comment"]
      }
    ],
    "color-hex-length": "short",
    "color-no-invalid-hex": true,
    "comment-empty-line-before": [
      "always",
      {
        "except": ["first-nested"],
        "ignore": ["stylelint-commands"]
      }
    ],
    "comment-whitespace-inside": "always",
    "custom-property-empty-line-before": [
      "always",
      {
        "except": ["after-custom-property", "first-nested"],
        "ignore": ["after-comment", "inside-single-line-block"]
      }
    ],
    "declaration-block-no-duplicate-properties": [
      true,
      {
        "ignore": ["consecutive-duplicates-with-different-values"]
      }
    ],
    "declaration-block-no-redundant-longhand-properties": true,
    "declaration-block-no-shorthand-property-overrides": true,
    "declaration-block-single-line-max-declarations": 1,
    "declaration-empty-line-before": [
      "always",
      {
        "except": ["after-declaration", "first-nested"],
        "ignore": ["after-comment", "inside-single-line-block"]
      }
    ],
    "font-family-no-duplicate-names": true,
    "function-calc-no-unspaced-operator": true,
    "function-linear-gradient-no-nonstandard-direction": true,
    "function-name-case": "lower",
    "keyframe-declaration-no-important": true,
    "length-zero-no-unit": true,
    "media-feature-name-no-unknown": true,
    "no-invalid-double-slash-comments": true,
    "number-leading-zero": "always",
    "number-no-trailing-zeros": true,
    "property-no-unknown": true,
    "rule-empty-line-before": [
      "always-multi-line",
      {
        "except": ["first-nested"],
        "ignore": ["after-comment"]
      }
    ],
    "selector-pseudo-class-no-unknown": true,
    "selector-pseudo-element-case": "lower",
    "selector-pseudo-element-colon-notation": "double",
    "selector-pseudo-element-no-unknown": true,
    "selector-type-case": "lower",
    "selector-type-no-unknown": true,
    "shorthand-property-no-redundant-values": true,
    "string-no-newline": true,
    "unit-no-unknown": true,
    "value-list-max-empty-lines": 0,
    "scss/selector-no-redundant-nesting-selector": true,
    "scss/at-else-closing-brace-newline-after": true,
    "scss/at-else-closing-brace-space-after": true,
    "scss/at-else-empty-line-before": true,
    "scss/at-extend-no-missing-placeholder": true,
    "scss/at-if-closing-brace-newline-after": true,
    "scss/at-if-closing-brace-space-after": true,
    "scss/at-import-no-partial-leading-underscore": true,
    "scss/at-mixin-argumentless-call-parentheses": true,
    "scss/dollar-variable-colon-newline-after": true,
    "scss/dollar-variable-colon-space-after": true,
    "scss/dollar-variable-colon-space-before": true,
    "scss/dollar-variable-empty-line-before": true,
    "scss/dollar-variable-no-missing-interpolation": true,
    "scss/double-slash-comment-empty-line-before": true,
    "scss/double-slash-comment-inline": true,
    "scss/double-slash-comment-whitespace-inside": true,
    "scss/declaration-nested-properties": true,
    "scss/declaration-nested-properties-no-divided-groups": true,
    "scss/media-feature-value-dollar-variable": true,
    "scss/operator-no-newline-after": true,
    "scss/operator-no-newline-before": true,
    "scss/operator-no-unspaced": true,
    "scss/partial-no-import": true
  }
}
